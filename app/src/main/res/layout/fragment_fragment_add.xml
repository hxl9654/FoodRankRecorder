<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentAdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hxlxz.hxl.foodrankrecorder.FragmentAdd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="好不好吃-录入信息" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/TabAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="店铺"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/spinnerShop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/buttonShopAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="菜品"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/spinnerFood"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/buttonFoodAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView44"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="咸度"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                    android:textSize="18sp" />

                                <SeekBar
                                    android:id="@+id/seekBarSalt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6.04"
                                    android:max="10"
                                    android:progress="5" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView43"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="辣度"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                    android:textSize="18sp" />

                                <SeekBar
                                    android:id="@+id/seekBarHot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6.04"
                                    android:max="10"
                                    android:progress="5" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView42"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="味道"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                    android:textSize="18sp" />

                                <SeekBar
                                    android:id="@+id/seekBarTaste"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6.04"
                                    android:max="10"
                                    android:progress="5" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView41"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="价格"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                    android:textSize="18sp" />

                                <SeekBar
                                    android:id="@+id/seekBarPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6.04"
                                    android:max="10"
                                    android:progress="5" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总评"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                    android:textSize="18sp" />

                                <SeekBar
                                    android:id="@+id/seekBarRank"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6.04"
                                    android:max="10"
                                    android:progress="5" />

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/checkBoxGreenList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绿名单" />

                        <CheckBox
                            android:id="@+id/checkBoxYellowList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="黄名单" />

                        <CheckBox
                            android:id="@+id/checkBoxRedList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红名单" />

                        <CheckBox
                            android:id="@+id/checkBoxBlackList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="黑名单" />

                        <CheckBox
                            android:id="@+id/checkBoxClearList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清除" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextComment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="备注"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonAddClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清除" />

                    <Button
                        android:id="@+id/buttonAddCommit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="提交" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
